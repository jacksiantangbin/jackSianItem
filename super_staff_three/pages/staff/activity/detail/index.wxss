.shareCenter {
  margin-top: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.shareCenter .img1 {
  width: 140rpx;
  height: 140rpx;
}

.shareCenter .img2 {
  width: 100rpx;
  height: 100rpx;
}

.shareCenter text {
  font-size: 36rpx;
  color: #353535;
}

.sharePage {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 200rpx;
  width: 50%;
}

.shareWx {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 200rpx;
  width: 350rpx;
  margin-top: 28rpx;
}

.wxTxt {
  padding-top: 26rpx;
}

canvas {
  height: 300rpx;
  width: 300rpx;
  position: fixed;
  z-index: 0;
}

.button-hover {
  background: white;
}

button {
  background: white;
  display: block;
  width: 200rpx;
  font-size: 26rpx;
  color: #353535;
  padding-left: 0rpx;
  padding-right: 0rpx;
  margin: 0;
  padding: 0;
  outline: none;
  border: 0px;
  background-color: transparent;
  line-height: 60rpx;
}

button::after {
  border: none;
}

.navbar {
  display: flex;
  justify-content: center;
  height: 7vh;
  background: white;
  width: 100%;
  overflow-x: scroll;
  overflow-y: hidden;
}

.navbar-item {
  /* flex: 1.0; */
  text-align: center;
  font-size: 28rpx;
  margin-bottom: -1px;
  line-height: 74rpx;
}

.navbar-text {
  display: block;
  /* width:120rpx; */
  margin: 0 30rpx;
  font-size: 32rpx;
  padding: 0 10rpx;
  color: #888;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.navbar-text.active {
  border-bottom: 6rpx solid #4298dc;
  color: #353535;
  font-size: 32rpx;
}

.hidden {
  display: none;
}
.over{
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #353535;
}