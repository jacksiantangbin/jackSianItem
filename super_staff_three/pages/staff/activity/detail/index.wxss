.content {
  width: 100%;
  height: 100%;
  border-top: 2rpx solid #eee;
  display: flex;
  flex-direction: column;
}

.section {
  width: 100%;
  flex: 1;
  overflow-x: hidden;
  overflow-y: scroll;
}

.cover {
  width: 750rpx;
  height: 750rpx;
}

.coverImg {
  width: 750rpx;
  height: 750rpx;
  background: #ccc;
}

.footer {
  width: 66%;
  height: 80rpx;
  position: fixed;
  bottom: 30rpx;
  box-shadow: #ddd 0 0 16rpx;
  left: 17%;
  background: -webkit-linear-gradient(left, #71d6f7, #307fd2);
  font-size: 32rpx;
  color: #fff;
  border-radius: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.footer .ft {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.introduce {
  width: 93%;
  height: 200rpx;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  margin: 0 auto;
}

.top {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 100%;
  margin-top: 14rpx;
}

.title {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 34rpx;
  color: #353535;
  font-weight: 600;
}

.time {
  font-size: 28rpx;
  color: #353535;
  margin-top: -24rpx;
}

.price {
  font-size: 32rpx;
  color: #353535;
}

.price .p {
  font-size: 40rpx;
  color: #ff3824;
}

.bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.nav {
  width: 100%;
  height: 10rpx;
  background: #eee;
}

.bottomContent {
  width: 90%;
  margin: 0 auto;
  padding-bottom: 20rpx;
}

.top_top {
  display: flex;
  align-items: center;
  font-size: 34rpx;
  color: #353535;
  padding: 20rpx 0 10rpx 0rpx;
  font-weight: 600;
}

.top_top .navTab {
  width: 6rpx;
  height: 34rpx;
  margin-right: 20rpx;
  background: #d3b987;
}

.txttxt {
  width: 96%;
  margin: 0 auto;
  margin-left: 4%;
  text-align: justify;
  font-size: 28rpx;
  color: #353535;
}

.aa2 {
  margin: 20rpx 0;
  min-height: 120rpx;
}

.txttxt2 {
  width: 92%;
  margin: 0 auto;
  /* margin-left: 4%; */
  font-size: 28rpx;
  color: #353535;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
}

.nameMsg {
  width: 62%;
  display: flex;
  align-items: center;
}
.get_name{
  width: 310rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.avatr {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  background: #ccc;
  box-shadow: #ccc 0 0 10rpx;
}

.share {
  margin-right: 10rpx;
}

/* 弹窗 */

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 400rpx;
  height: 240rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 50%;
  z-index: 9999;
  background: #f9f9f9;
  margin: -120rpx 0 0 -200rpx;
  border-radius: 36rpx;
}

.modal-footer {
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  height: 50rpx;
  font-size: 28rpx;
  line-height: 50rpx;
  margin-top: 20rpx;
}

.btn-confirm {
  width: 250rpx;
  font-size: 28rpx;
  border-radius: 50rpx;
  box-shadow: #ddd 0px 0px 8px;
  color: #fff;
  background: #4298dc;
  text-align: center;
}

.code {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
  color: #353535;
  margin-top: 40rpx;
}

.codeTxt {
  font-size: 30rpx;
}

.get_num {
  line-height: 30rpx;
  padding: 0 10rpx;
  display: inline-block;
  border-bottom: 2rpx solid #353535;
  font-size: 28rpx;
  color: #353535;
  text-align: center;
}

