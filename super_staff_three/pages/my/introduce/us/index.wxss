.content {
  border-top: 2rpx solid #eee;
  width: 100%;
  height: 100%;
}

.top {
  width: 100%;
  height: 350rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
}

.top image {
  width: 300rpx;
  height: 300rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.text {
  width: 90%;
  margin: 0 auto;
  font-size: 26rpx;
  color: gray;
  display: flex;
  justify-content: center;
  text-align: center;
  max-height: 300rpx;
  overflow-y: scroll;
}

.bottom {
  padding-top: 200rpx;
  width: 90%;
  margin: 0 auto;
}

.bottom .one {
  display: flex;
  width: 100%;
  justify-content: space-between;
  height: 60rpx;
  align-items: center;
  font-size: 26rpx;
  border-bottom: 2rpx solid #eee;
}

.bottom .one text {
  color: gray;
}

.footer {
  width: 100%;
  margin-top: 100rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: gray;
}
