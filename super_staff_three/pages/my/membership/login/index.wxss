.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 500rpx;
  height: 500rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 20rpx;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 100rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal_text {
  padding-top: 30rpx;
  font-size: 26rpx;
  color: #030303;
  text-align: center;
  margin-left: 25rpx;
}

.modal-footer {
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  height: 60rpx;
  font-size: 34rpx;
  line-height: 60rpx;
  padding-top: 120rpx;
}

.btn-confirm {
  width: 300rpx;
  color: white;
  text-align: center;
  border: 2rpx solid #4298DC;
  background: #4298DC;
  border-radius: 20rpx;
} 
