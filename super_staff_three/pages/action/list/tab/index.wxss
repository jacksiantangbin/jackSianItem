page {
  background: #fff;
 
}
.detail {
  flex: 1;
  width: 100%;
  margin-top: 80rpx;
  overflow-x: hidden;
  overflow-y: scroll;
}
.navbar {
  display: flex;
  justify-content: center;
  height:7vh;
  background: white;
  width: 100%;
  overflow-x: scroll;
  overflow-y: hidden;
  position: fixed;
  top: 0;
  left:0;
   border-top: 2rpx solid #eee;
}

.navbar-item {
  /* flex: 1.0; */
  text-align: center;
  font-size: 28rpx;
  margin-bottom: -1px;
  line-height: 74rpx;
}

.navbar-text {
  display: block;
  /* width:120rpx; */
  margin:0 30rpx ;
  font-size: 28rpx;
  padding: 0 10rpx;
  color: #353535;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.navbar-text.active {
  border-bottom: 6rpx solid #4298DC;
  color: #353535;
  font-size: 32rpx;
}

.hidden {
  display: none;
}

.hot-item-container {
width: 100%;
}
.section{
  width: 96%;
  margin: 0 auto;
  margin-top:30rpx;

}
.content{
  width: 100%;
  height: 282rpx;
  position: relative;
  margin-bottom: 30rpx;
}
.bg{
  width: 100%;
  height: 282rpx;
}
.position{
width:82%;
height:230rpx;
display:flex;
justify-content:space-around;
flex-direction:column;
margin:0 auto;
position:absolute;
top:30rpx;
left:10%;
}
.top{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width:100%;
}
.title{
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 34rpx;
  color: #353535;
}
.time{
  font-size: 28rpx;
  color: #353535;
}
.price{
  font-size: 28rpx;
 color: #888;
}
.price .p{
  font-size: 46rpx;
  color: #FF3824;
  margin-right: 10rpx;
}
.bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.page-loading{
  width: 300rpx;
  height:200rpx;
  position: fixed;
  left: 50%;
  top: 50%;
  margin: -140rpx 0 0 -150rpx
}
.page-loading .img{
  width: 300rpx;
  height:200rpx;
margin: 0 auto;
/* padding-top:340rpx; */
}
.page-loading .loading{
  width: 300rpx;
  height:160rpx;
}
.page-loading .word{
 font-size:32rpx;
 color: #888;
  text-align: center;
  padding-bottom: 30rpx;
}