.content {
  width: 100%;
  height: 100%;
  border-top: 2rpx solid #eee;
}

.section {
  width: 90%;
  margin: 0 auto;
  margin-top: 30rpx;
}

.center {
  width: 100%;
  height: 300rpx;
  margin-bottom: 30rpx;
  box-shadow: #ddd 0 0 16rpx;
  border-radius: 10rpx;
}

.box {
  width: 95%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 5%;
  position: relative;
}

.title {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 34rpx;
  color: #353535;
  margin-top: 10rpx;
}

.time {
  font-size: 26rpx;
  color: #353535;
}

.p {
  font-size: 46rpx;
  color: #ff3824;
}

.payType {
  width: 144rpx;
  height: 144rpx;
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
}
