.content {
  width: 100%;
  height: 100%;
  border-top: 2rpx solid #eee;
}

.section {
  width: 100%;
  height: 100%;
  margin-top: 30rpx;
}

.box {
  width: 93%;
  height: 120rpx;
  border-radius: 10rpx;
  box-shadow: #eee 0 0 16rpx;
  margin: 0 auto;
  display: flex;
  margin-bottom: 30rpx;
  position: relative;
}

.bo_left {
  width: 82%;
  font-size: 32rpx;
  color: #353535;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 60rpx;
  white-space:nowrap;
  overflow: hidden;
  text-overflow: ellipsis;

}

.bo_right {
  display: flex;
  align-items: center;
  justify-content: center;
}
.storeTop{
  width: 60rpx;
  height: 60rpx;
  position:absolute;
  left: 0;
  right: 0;
}
