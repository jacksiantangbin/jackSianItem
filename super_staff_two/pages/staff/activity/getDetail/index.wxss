/* 弹窗 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
width:400rpx;
height:240rpx;
overflow:hidden;
position:fixed;
top:50%;
left:50%;
z-index:9999;
background:#f9f9f9;
margin:-120rpx 0 0 -200rpx;
border-radius:36rpx;
}
.modal-footer {
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  height: 50rpx;
  font-size: 28rpx;
