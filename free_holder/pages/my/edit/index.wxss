.content {
  width: 100%;
  height: 100%;
  border-top: 2rpx solid #d8d8d8;
}

.top {
  width: 160rpx;
  height: 160rpx;
  margin: 100rpx auto;
}

.top image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  /* background: #ccc; */
}

.nav {
  width: 690rpx;
  margin: 0 auto;
  font-size: 32rpx;
  color: #000;
  display: flex;
  align-items: center;
}

.nav2 {
  font-size: 32rpx;
  color: #000;
  display: flex;
  align-items: center;
}

.navTab {
  background: #d3b987;
  width: 6rpx;
  height: 30rpx;
  margin-right: 14rpx;
}

.name {
  font-size: 32rpx;
  color: #000;
  width: 80%;
  margin: 0 auto;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.name_input {
  font-size: 32rpx;
  color: #000;
  width: 80%;
  height: 70rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid gray;
  border-radius: 10rpx;
  padding-left: 20rpx;
}

.radio-group {
  display: flex;
  justify-content: flex-start;
  width: 80%;
  margin: 0 auto;
}

.radio {
  display: block;
  padding: 5px;
  margin-right: 30rpx;
}

radio .wx-radio-input {
  border-radius: 50%;
  width: 26rpx;
  height: 26rpx;
  /* margin-top: -5rpx; */
  background: white;
}

radio .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 50%;
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 26rpx; /* 对勾大小 26rpx */
  color: white; /* 对勾颜色 */
  background: #4298dc;
  border-color: #4298dc;
}

.phone_input {
  font-size: 32rpx;
  color: #888;
  width: 62%;
  height: 70rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid gray;
  border-radius: 10rpx 0 0 10rpx;
  padding-left: 20rpx;
  line-height: 70rpx;
  border-right: none;
}

.bo {
  display: flex;
  align-items: center;
  width: 83%;
  margin: 0 auto;
}

.phoneBtn {
  font-size: 32rpx;
  color: #fff;
  width: 220rpx;
  height: 74rpx;
  background: #4298dc;
  border-radius: 0 10rpx 10rpx 0;
  line-height: 74rpx;
  text-align: center;
}

.footer {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 73%;
  font-size: 32rpx;
  border-radius: 80rpx;
  box-shadow: #ddd 0px 0px 8px;
  height: 7%;
  color: #fff;
  background: -webkit-linear-gradient(left, #71d6f7, #307fd2);
  position: fixed;
  bottom: 30rpx;
  left: 13.5%;
  letter-spacing: 20rpx;
}
