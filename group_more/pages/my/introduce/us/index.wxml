    <image src='{{logo}}'  mode='aspectFill'></image>
  </view>
  <view class='text' wx:if='{{aboutUs.bandRemark}}'>{{aboutUs.bandRemark}}</view>
  <view class='bottom'>
    <view class='one' wx:if='{{aboutUs.name}}'>
      <text>微信公众号</text>
