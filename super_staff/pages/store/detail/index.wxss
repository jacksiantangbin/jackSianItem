}

.top_top {
  display: flex;
  align-items: center;
  font-size: 36rpx;
  color: #000;
}

.top_top .nav {
  width: 6rpx;
  height: 36rpx;
  margin-right: 20rpx;
  background: #d3b987;
}
.st_txt {
  width: 670rpx;
  color: #888;
  font-size: 24rpx;
  text-align: justify;
  text-indent: 50rpx;
  margin: 0 auto;
  margin-bottom: 30rpx;
}

.picList {
  font-size: 28rpx;
  color: #353535;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}

.section_top {
  width: 680rpx;
  height: 220rpx;
  border-radius: 10rpx;
  display: flex;
  margin: 10rpx;
  margin-bottom: 30rpx;
}

.section_top image {
  flex: 1;
  height: 220rpx;
  margin-left: 20rpx;
  display: block;
  object-fit: cover;
  box-shadow: #ccc 0 0 8px;
  background: #f9f9f9;
  border-radius: 10rpx;
}

.section_top image:first-child {
  margin-left: 0rpx;
}