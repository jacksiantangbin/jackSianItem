  font-size: 28rpx;
  margin: 0 auto;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
}

.address_no {
  display: flex;
  align-items: center;
}

.address_no .ic_txt {
  margin-left: 20rpx;
