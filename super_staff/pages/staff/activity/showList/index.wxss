.content{
  width: 100%;
  height: 100%;
  border-top: 2rpx solid #eee;
}
.section{
  width: 90%;
  margin: 0 auto;
  margin-top: 30rpx ;
  height: 100%;
}
.center{
  width: 100%;
  height: 300rpx;
  position: relative;
margin-bottom: 30rpx;
}
.bg{
  width: 100%;
  height: 300rpx;
  box-shadow: #ddd 0 0 16rpx;
  background: #ccc;
  border-radius: 10rpx;
}
.position{
   width: 100%;
  height: 300rpx;
  display: flex;
       background: #FFFFFF;
background: rgba(0,0,0,0.5);
border-radius: 10rpx;
  justify-content: space-around;
    flex-direction: column;
    margin: 0 auto;
    position: absolute;
    top: 0;
    left: 0;
}
.top{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width:90%;
/* height:100rpx; */
margin:0 auto;
margin-top: 10rpx;

}
.title{
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 36rpx;
  color: #fff;
}
.time{
  font-size: 28rpx;
  color: #fff;
  margin-top: 20rpx
}
.price{
  font-size: 32rpx;
  color: #E5C587;
}
.price .p{
  font-size: 40rpx;
}
.bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
    width:90%;
margin:0 auto;
}
.btn{
  width: 200rpx;
  height: 60rpx;
  background:-webkit-linear-gradient(left, #307FD2, #71D6F7);
  /* background: rgba(105, 104, 104, 0.3); */
  color: #fff;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
}
.btn2{
  width: 200rpx;
  height: 60rpx;
  background: rgba(105, 104, 104, 0.3);
  color: #fff;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
}

.page-loading{
  width: 300rpx;
  height:200rpx;
  position: fixed;
  left: 50%;
  top: 50%;
  margin: -140rpx 0 0 -150rpx
}
.page-loading .img{
  width: 300rpx;
  height:200rpx;
margin: 0 auto;
/* padding-top:340rpx; */
}
.page-loading .loading{
  width: 300rpx;
  height:160rpx;
}
.page-loading .word{
 font-size:32rpx;
 color: #888;
  text-align: center;
  padding-bottom: 30rpx;
}
.get_num{
  line-height: 30rpx;
  padding: 0 10rpx;
  display:inline-block;
  border-bottom: 2rpx solid #fff;
  font-size: 28rpx;
color: #fff;
text-align: center;
}