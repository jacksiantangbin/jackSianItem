.contents {
  width: 100%;
  height: 100%;
  border-top: 2rpx solid #eee;
}

.top_show {
  width: 90%;
  height: 70rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(66, 152, 220, 0.80);
  color: #fff;
  font-size: 28rpx;
  z-index: 9999;
  margin: 0 auto;
  padding: 0 5%;
  position: fixed;
  top: 0;
  left: 0;
}

.box {
  width: 90%;
  height: 100%;
overflow-x: hidden;
margin: 0 auto;


}
.scroll{
  margin-top: 30rpx;
}
.clear {
  width: 36rpx;
  height: 36rpx;
}

.order-item {
  height: 300rpx;
  width: 100%;
  display: flex;
  position: relative;
  margin-bottom: 30rpx;

}

.remove {
  width: 140rpx;
  height: 100%;
  background-color: #FC6E63;
  border-radius: 0 10rpx 10rpx 0;
  color: white;
  position: absolute;
  top: 0;
  right: -140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.one {
  width: 100%;
  height: 100%;
  box-shadow: #ddd 0 0 12rpx;
}

.section {
   height: 100%;
  width: 100%;
   position: relative;

}
.sc_cover{
  height: 100%;
  width: 100%;
  border-radius: 10rpx;
}
.sc_cover2{
  height: 100%;
  width: 100%;
  border-radius: 10rpx 0 0 10rpx;

}
.position{
   width: 100%;
  height: 300rpx;
  display: flex;
      background: #FFFFFF;
background: rgba(0,0,0,0.5);
