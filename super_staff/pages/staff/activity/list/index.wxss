}
.title{
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 36rpx;
  color: #fff;
  margin-top: 10rpx;

}
.time{
  font-size: 28rpx;
  color: #fff;
  margin-top: 10rpx;
}
.num_num{
  color: #D8D8D8;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  margin-top: 10rpx;

}
.num_num .num2{
  margin-left: 40rpx;
}
.price{
  font-size: 32rpx;
  color: #E5C587;
}
.price .p{
