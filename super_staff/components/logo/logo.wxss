.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
width: 500rpx;
height: 300rpx;
overflow: hidden;
position: fixed;
top: 50%;
left: 50%;
z-index: 9999;
background: #f9f9f9;
margin: -150rpx 0 0 -250rpx;
border-radius: 36rpx;

}
