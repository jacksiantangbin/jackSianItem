.content {
  width: 100%;
  height: 100%;
}

.section {
  width: 100%;
  height: 100%;
}
::-webkit-scrollbar {
     width: 0;
     height: 0;
     color: transparent;
}
.section .top {
  width: 100%;
  height: 286rpx;
background:-webkit-linear-gradient(left, #71D6F7, #307FD2);
  display: flex;
  justify-content: center;
  align-items: center;
}
.section .top image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.section .center{
  width: 90%;
  margin: 0 auto;
}
.section .center .name,.section .center .phone{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 26rpx;
}
.section .center .wx_name{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  padding-left: 20rpx;
}
.section .center .input_name{
  width:642rpx;
  height: 50rpx;
  border: 2rpx solid #ccc;
  font-size: 26rpx;
  padding-left: 30rpx;
}
.section .center .sex{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 26rpx;
}

radio{
    width: 38rpx;
    font-size: 26rpx;
    margin-right: 50rpx;
}
.radio-group{
  margin-top:-2rpx;
  margin-bottom: 20rpx;
  line-height: 50rpx;
  display: flex;
}
 .radio{
   display: flex;
 }
 .radio view{
   width: 100rpx;
   height: 50rpx;
   border: 2rpx solid #ccc;
   font-size: 26rpx;
   text-align: center;
   line-height: 50rpx;
   margin-right: 20rpx;
 }
radio .wx-radio-input{
    border-radius: 50%; 
    width: 26rpx;
    height: 26rpx;
}
 

radio .wx-radio-input.wx-radio-input-checked::before{
    border-radius: 50%;
    width: 48rpx; 
    height: 48rpx; 
    line-height: 48rpx;
    text-align: center;
    font-size: 26rpx; /* 对勾大小 26rpx */
    color:white; /* 对勾颜色 */
    background:#4298dc;
    border-color: #4298dc;
}
.nav{
  width: 100%;
  height: 10rpx;
  background: #eee;
}
.section .center .input_phone{
  width:520rpx;
  height: 52rpx;
  border: 2rpx solid #ccc;
  font-size: 26rpx;
  text-indent: 10rpx;
  margin-bottom: 30rpx;
  line-height: 52rpx;
}
.section .center .input_card{
  width:520rpx;
  height: 50rpx;
  border: 2rpx solid #ccc;
  font-size: 26rpx;
  text-indent: 10rpx;
}
.center .one{
  width: 100%;
  display: flex;
}

.center .one .aaa{
  width: 165rpx;
  height: 56rpx;
  font-size: 26rpx;
  color:white;
  background: #4298dc;
  text-align: center;
  line-height: 56rpx;
  margin-left:-10rpx;
}
.section .center .address{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
}
.bottom{
  width: 100%;
  height:100rpx;
  margin: 0 auto;
  border: 2rpx solid #ccc;
  font-size: 26rpx;
  text-indent: 10rpx;
}
