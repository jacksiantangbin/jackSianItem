.container-info {
  padding: 0 5%;
}

.man-form-info {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.man-form-info .phone, .man-form-info .regcode {
  display: flex;
  padding-top: 20rpx;
}

.phone .input {
  width:60%;
  height: 58rpx;
  font-size: 26rpx;
  margin-left:60rpx
}

.regcode .input {
  width:200rpx;
  height: 58rpx;
  font-size: 26rpx;
  margin-left:86rpx;

}

.code {
  position: relative;
  width: 100%;
}

.code button {
  position: absolute;
  top: 72rpx;
  right: 0;
}

.f-center {
  display: flex;
  justify-content: center;
  width: 100%;
}

.picture_list {
  /* justify-content: center; */
  padding: 0 7%;
}

.upload_progress {
  width: 167rpx;
  height: 164rpx;
}

.read-man-pact {
  display: flex;
  padding: 30rpx 0 50rpx 70rpx;
}

.read-man-pact radio-group {
  display: flex;
  align-items: center;
}

.submit-form-info {
  display: flex;
  justify-content: center;
}

.submit-form-info button {
  background-color: #4298dc;
  width: 82%;
  margin: 3% 0;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  margin-top:100rpx;
  letter-spacing:20rpx;
}

checkbox .wx-checkbox-input {
  border-radius: 50%;
  width: 26rpx;
  height: 26rpx;
  margin-top: -5rpx;
  background: #eee;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 26rpx; /* 对勾大小 26rpx */
  color: white; /* 对勾颜色 */
  background: #4298dc;
  border-color: #4298dc;
}

.read-man-pact {
  font-size: 26rpx;
  color: gray
}

.read-man-pact text {
  color: #4298dc;
}

