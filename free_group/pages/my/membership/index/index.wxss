.membership_content{
  width: 100%;
  height: 100%;
  border-top: 2rpx solid #eee;
}
.membership_top{
  width: 90%;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  margin-top: 170rpx;
}
.membership_top image{
  width:260rpx;
  height: 210rpx;
  margin: 0 auto;
}
::-webkit-scrollbar {
     width: 0;
     height: 0;
     color: transparent;
}
.membership_top .txt{
  width:100%;
  line-height: 50rpx;
  text-align: center;
  font-size:32rpx;
  margin: 80rpx 0 30rpx 0;
}
.membership_top .button{
  width:100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 34rpx;
  color: white;
  background: #ea8670;
  border-radius: 10rpx;
  
 
}