.content{
  width: 100%;
  height: 100%;
  border-top: 2rpx solid #eee;
}
.section{
  width: 90%;
  margin: 0 auto;
  
}
.section .top{
  margin: 40rpx 0;
  width:100%;
  height: 230rpx;
  border: 4rpx solid #eee;
  margin-left: -4rpx;
}
::-webkit-scrollbar {
     width: 0;
     height: 0;
     color: transparent;
}
.section .top .center{
  padding:20rpx;
  height: 190rpx;
  display: flex;
  position: relative;
  padding-right:0rpx;

  left: 0;
  top: 0;
}
.section .top .center image{
  width: 190rpx;
  height: 190rpx;
  margin-right: 20rpx;
}
.center .center_right .name{
  font-size:28rpx;
  width: 440rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.center .center_right .address{
  line-height: 40rpx;
  font-size:26rpx;
  width: 440rpx;
  white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      margin: 10rpx 0 10rpx 0;
       color: gray;
}
.center .center_right .address text{
  font-size:26rpx;
  color:black;
}
.center .center_right .price{
  font-size:34rpx;
  color: #FF3B30;
  height: 40rpx;
  line-height: 40rpx
}
.center .center_right .price text{
  font-size:26rpx;
}
.nav{
  width: 100%;
  height: 10rpx;
  background: #eee;
}
.bottom{
  width:85%;
