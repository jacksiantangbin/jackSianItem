.content {
  width: 100%;
  height: 100%;
  border-top: 2rpx solid #eee;
}

.section {
  margin: 0 auto;
  width: 90%;
}
.section .row1 {
   width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  color: gray;
  padding-top: 20rpx;
}
::-webkit-scrollbar {
     width: 0;
     height: 0;
     color: transparent;
}
.section .row1 .item_price {
  margin-left: 10rpx;
}
.section .row2 {
   width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  color: gray;
}

.section .row2 .item_name {
  margin-left: 10rpx;
}

.section .row3 {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  color: gray;
}

.section .row3 .order_num {
  margin-left: 38rpx;
}

.result {
  width: 100%;
}

.result image {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  padding-top: 80rpx;
}
.result .txt{
  font-size: 32rpx;
  text-align: center;
  padding-top: 30rpx;
}
.btn{
  width: 100%;
  display: flex;
  justify-content: space-around;
  padding-top: 26rpx;
}
.btn .left_btn{
  font-size: 28rpx;
  width: 280rpx;
  height: 60rpx;
  text-align:center;
  line-height: 60rpx;
  border: 2rpx solid #4298dc;
  color: #4298dc;
  background: white;
}
.btn .right_btn{
  font-size: 28rpx;
  width: 280rpx;
  height: 60rpx;
  text-align:center;
  line-height: 60rpx;
  background: #4298dc;
  color:white;
}
.nav{
  background: #eee;
  width: 100%;
  height: 10rpx;
  margin: 40rpx 0 20rpx 0;
}
.lists_content{
  width: 100%;
}

.lump_content{
  width: 90%;
  margin: 0 auto;
  font-size: 28rpx;
  display: flex;
  justify-content:center;
}
.content_left_top{
  display: flex;
  margin-top: 30rpx;
}
 .content_left_top .left_top_lump{
  
   margin-left: 100rpx;
 }
 .section_content_left{
   width:60%;
 }
.section_content_left .content_left_bottom{
  display: flex;
  align-items: center;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}
.section_content_left .content_left_bottom .big{
 width: 90rpx;
 height: 90rpx;
 margin-right: 25rpx;
}
.section_content_left .content_left_bottom .big image{
 width: 90rpx;
 height: 90rpx;
 display: block;
  border-radius: 50%;
}
.section_content_left .content_left_bottom .small{
 display: flex;
}
.section_content_left .content_left_bottom .small image{
 width: 70rpx;
 height: 70rpx;
 display: block;
  border-radius: 50%;
  margin-right: 10rpx;
}
.content_right_bottom{
  font-size: 24rpx;
  color:black;
  margin: 10rpx 0 20rpx;
  display: flex;
  justify-content: center;
}

 .content_right_bottom .tui-countdown-content{
  text-align: center;
  font-size: 24rpx;
  z-index: 10;
  margin-left:3rpx;
}
.content_right_bottom .tui-countdown-content .tui-conutdown-box{
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  background: #4298dc;
  line-height: 30rpx;
  text-align: center;
  border-radius: 8rpx;
  color:white;
  margin: 0 5px;
  padding: 4rpx 4rpx;
}
.content_right_bottom .tui-countdown-content .tui-countdown-bg{
 background: #4298dc;
}
.footer{
  position: fixed;
  font-size: 36rpx;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #4298dc;
  color: white;
background: -webkit - linear - gradient(left, #71D6F7, #307FD2);
}